CREATE SEQUENCE USER_ID_SEQ;
CREATE SEQUENCE POSITION_ID_SEQ;
CREATE SEQUENCE DEPARTMENT_ID_SEQ;
CREATE SEQUENCE VACATION_ID_SEQ;
CREATE SEQUENCE VACATION_TYPE_ID_SEQ;

CREATE TABLE DEPARTMENT
(DEPARTMENTID BIGINT PRIMARY KEY NOT NULL DEFAULT NEXTVAL('DEPARTAMENT_ID_SEQ'),
 NAME VARCHAR(150) NOT NULL);
 
CREATE TABLE POSITION
(POSITIONID BIGINT PRIMARY KEY NOT NULL DEFAULT NEXTVAL('POSITION_ID_SEQ'),
 NAME VARCHAR(150) NOT NULL);
 
 insert into position (name) values ('Разработчик');
 insert into position (name) values ('Менеджер');
 
 insert into DEPARTMENT (name) values ('Отдел 1');
 insert into DEPARTMENT (name) values ('Отдел 2');

CREATE TABLE USERS
(USERID BIGINT PRIMARY KEY NOT NULL DEFAULT NEXTVAL('USER_ID_SEQ'),
 FIRSTNAME VARCHAR(150) NOT NULL,
 LASTNAME VARCHAR(150) NOT NULL,
 MIDDLENAME VARCHAR(150),
 PHONE VARCHAR(20),
 EMAIL VARCHAR(50),
 PASSWORD VARCHAR(50),
 DATESTART TIMESTAMP,
 DATEEND TIMESTAMP,
 DEPARTAMENTID BIGINT REFERENCES DEPARTMENT,
 CHIEFID BIGINT,
 POSITIONID BIGINT REFERENCES POSITION);
 
CREATE TABLE VACATIONTYPES
(VACATIONTYPEID BIGINT PRIMARY KEY NOT NULL DEFAULT NEXTVAL('VACATION_TYPE_ID_SEQ'),
 NAME VARCHAR(50) NOT NULL,
 ISACTIVE BOOLEAN NOT NULL); 	
 
CREATE TABLE VACATIONHISTORY
(VACATIONID BIGINT PRIMARY KEY NOT NULL DEFAULT NEXTVAL('VACATION_ID_SEQ'),
 USERID BIGINT REFERENCES USERS,
 DATESTART TIMESTAMP,
 DATEEND TIMESTAMP,
 VACATIONSTATUSID BIGINT NOT NULL,
 VACATIONTYPEID  BIGINT NOT NULL REFERENCES VACATIONTYPES);
